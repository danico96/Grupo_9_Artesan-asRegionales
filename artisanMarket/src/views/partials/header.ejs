<header>
    <!-- INICIO WAVE -->

    <div class="bg_color">
        <div class="top-header">

            <div class="box-logo">
                <a href="/">
                    <img class="logo" src="/images/logo.png" width="360" alt="Logo de Artisan Market">
                    <h1 class="title">Artisan Market Colombia</h1>
                </a>
            </div>
            <form>
                <input type="text" placeholder="Busca un producto" />
                <button><i class="fas fa-search"></i></button>
            </form>
            <!-- <div class="searchbar">
                <input type="text" placeholder="Buscar productos">
                <div><i class="fas fa-search"></i></div>
            </div> -->
            <nav class="main-navbar">
                <ul>
                    <% if(locals.usuario) { %>
                        <li>
                            <p class="Perfil">
                                <img class="ImgPerfil" src="/images/users/<%=locals.usuario.imgPerfil %>"
                                    style='border-radius: 100%;' alt="">
                            </p>
                        </li>
                        <li>
                            <a href="./users/userDetail/<%= locals.usuario.id %>">
                                <p>
                                    <%=locals.usuario.first_name %>
                                </p>
                                <p>
                                    <%=locals.usuario.last_name %>
                                </p>
                            </a>
                        </li>
                        <li>
                            <a href="/products/productCart">
                                <i class="fas fa-shopping-cart"></i>
                                <p> Carrito </p>
                            </a>
                        </li>
                        <li>
                            <a href="/logout"> Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a>
                        </li>
                        <% } else { %>
                            <li>
                                <a href="/register">
                                    <i class="far fa-id-card"></i>
                                    <p> Registro </p>
                                </a>
                            </li>
                            <li>
                                <a href="/login">
                                    <i class="fas fa-user"></i>
                                    <p> Ingreso </p>
                                </a>
                            </li>
                            <%}%>
                </ul>
            </nav>
            <nav class="browse-navbar">
                <ul>
                    <li><a href="#">Regiones</a></li>
                    <li><a href="/products">Listado de Productos</a></li>
                    <li><a href="#">Contactanos</a></li>
                </ul>
            </nav>
        </div>

        <div class="burger-menu">
            <i class="fas fa-bars"></i>
        </div>
        <div class="wave w1"></div>
        <div class="wave w2"></div>
    </div>

    <!-- FINAL WAVE -->



</header>