<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include ('../partials/head') %>

    <body>
    <!-- Header -->
        <%- include ('../partials/header') %>
            <main class="productEdit">
                <div>
                    <h2>Editar producto</h2>
                    <h2><%= product.name %> </h2>
                </div>
                <form action="/products/productEdit/<%= product.id %>?_method=PUT" method="POST" enctype='multipart/form-data' >
                    <p>
                        <input type="text" name="productName" placeholder="Nombre del producto" value='<%= product.name %>'  required>
                    </p>
                    <h3>Descripción</h3>
                    <p>
                        <textarea type="text" name="description" value='description'  required></textarea>
                    </p>
                    <p>
                        <label>Seleccione una región: </label>
                        <select name="region">
                            <option value="Andina">Andina</option>
                            <option value="Caribe">Caribe</option>
                            <option value="Pacifica">Pacífica</option>
                            <option value="Orinoquia">Orinoquía</option>
                            <option value="Amazonia">Amazonía</option>
                            <option value="Insular">Insular</option>
                        </select>
                    </p>
                    <p>
                        <input type="text" name="colors" placeholder="Color" value='<%= product.colors %>'required>
                    </p>
                    <p>
                        <input type="text" name="price" placeholder="Precio" value='<%= product.price  %>' required>
                    </p>
                    <p>
                    <h3>Foto de producto</h3>
                    </p>
                    <p>
                        <input type="file" name="image" accept=".jpg,.png" required>
                    </p>
                    <p>
                        <button type="submit" name="/">Guardar</button>
                    </p>
                </form>
            </main>

            <!-- Footer -->
            <%- include('../partials/footer') %>
    </body>

</html>