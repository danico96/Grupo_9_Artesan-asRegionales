<!DOCTYPE html>
<html lang="es">
<!-- Head -->

<head>
	<link rel="stylesheet" href="/css/productEdit.css">
</head>
<%- include ('../partials/head') %>

	<body>
		<!-- Header -->
		<%- include ('../partials/header') %>
			<main class="formulario">
				<div class="productEdit">
					<h2 class="title-form">Editar producto</h2>
					<h2 class="title-product">
						<%= product.name %>
					</h2>

					<div class="img">
						<img src="/images/products/<%= product.picture %>" class="productImage">
					</div>

					<div class="errores-back">
						<% if (locals.errors) { errors.forEach(error=> { %>
							<p>
								* <%= error.msg %>
							</p>
							<% }) } %>
					</div>

					<form class="form-edit" action="/products/productEdit/<%= product.id %>?_method=PUT" method="POST" enctype='multipart/form-data'>
						<div class="field-form">
							<label for="productName">Nombre del producto</label><br>
							<input type="text" class="productName" name="productName" placeholder="Nombre del producto"
								value='<%= product.name %>' required>
						</div>

						<div class="field-form">
							<label for="description">Descripción</label><br>
							<textarea type="text" class="description" name="description" required rows="6"
								cols="40"><%= product.description %></textarea>
						</div>

						<div class="field-form"> 
							<label for="region"> Seleccione una región</label> <br>
							<select name="region">
								<option value="1">Andina</option>
								<option value="2">Pacífica</option>
								<option value="3">Caribe</option>
								<option value="4">Amazonía</option>
								<option value="5">Orinoquía</option>
								<option value="6">Insular</option>
							</select>
						</div>
											
						<div class="field-form">
							<label for="quantity">Cantidad</label><br>
							<input type="text" class="quantity" name="quantity" placeholder="Cantidad"
								value='<%= product.quantity  %>' required><br>
						</div>

						<div class="field-form">
							<label for="price">Precio</label><br>
							<input type="text" class="price" name="price" placeholder="Precio" value='<%= product.price  %>' required>
						</div>

						<div class="field-form">
							<label for="image">Foto del producto</label><br>
							<input type="file" name="image" accept=".jpg,.jpeg,.png,.gif" value='<%= product.picture.filename %>'>
						</div>
						
						<div class="errores-front">
							<ul> </ul>
						</div>

						<p class="btn-login">
							<button type="submit"> Actualizar </button>
						</p>	
					
					</form>
				</div>			

			</main>
			<!-- Footer -->
			<%- include('../partials/footer') %>

				<script src="/js/products/product.js"></script>
	</body>

</html>