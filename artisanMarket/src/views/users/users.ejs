<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include ('../partials/head') %>

	<head>
		<link rel="stylesheet" href="/css/users.css">
	</head>

	<body>
		<!-- Header -->
		<%- include ('../partials/header') %>
			<!-- todos los usuarios -->
			<% if(locals.userLogged[0].roles_id=="1" ){%>
				<div class="allUsers">
					<h2 class="title">Lista de Usuarios</h2>

					<div class="btn-title">
						<a href='./users/register'> Crear nuevo usuario </a>
					</div>

					<% users.forEach(user=> { %>
						<div class="userContainer">

							<div class="infoUser">
								<img src="/images/users/<%= user.image%>" alt="">
								<div class="nameUser">
									<p>
										<%= user.id + " |" %>
											<%= user.name %>
												<%= user.lastname %>
									</p>
									<p class="userEmail">
										<%= ' | ' + user.email %> 
									</p>

								</div>
							</div>

							<div class="btnsCRUD">
								<div class="btn">
									<a href="./users/userDetail/<%= user.id %>" class="info">Detalle</a>
								</div>
								<div class="btn">
									<a href="./users/userEdit/<%= user.id %>" class="edit">Editar</a>
								</div>
								<div class="btn">
									<form action="./users/<%= user.id %>?_method=DELETE" method="POST">
										<div>
											<button>Eliminar</button>
										</div>
									</form>
								</div>
							</div>

						</div>
						<% }) %>
				</div>
				<% } else {%>
					<h3>Acceso denegado</h3>
					<% } %>

						<!-- Footer -->
						<%- include('../partials/footer') %>

	</body>

</html>