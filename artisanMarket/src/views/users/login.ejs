<!DOCTYPE html>
<html lang="es">

<!-- Head -->

<head>
	<link rel="stylesheet" href="/css/login.css">
</head>
<%- include ('../partials/head') %>

	<body>
		<!-- Header -->
		<%- include ('../partials/header') %>

			<main class="formulario">

				<form class="form-login" action="/users/login" method="POST">

					<h2 class="title-form">Inicia sesión</h2>

					<div class="errores-back">
						<% if (locals.errores) { errores.forEach(error=> { %>
							<p>
								* <%= error.msg %>
							</p>
							<% }) } %>
					</div>

					<div class="errores-front">
						<ul> </ul>
					</div>

					<div class="field-form">
						<label for="email">Email</label><br>
						<input type="text" id="email" name="email"><br>
						<% if (locals.errors && errors.email) { %>
							<p>
								<%= errors.email.msg %>
							</p>
							<% } %>
					</div>	

					<div class="field-form">
						<label for="password">Contraseña</label><br>
						<input type="password" id="password" name="password">
					</div>

					<div class="field-form">
						<input type="checkbox" class="check-box" name="recordar"><span>Recuerdame</span>
					</div>		
																				
							<p class="btn-login">
								<button type="submit">Iniciar sesión</button>
							</p>

							<a href="/users/register"><strong>¿No tienes cuenta?</strong></a>

							<% if (locals.errors && errors.auth) { %>
								<p>
									<%= errors.auth.msg %>
								</p>
								<% } %>
				</form>
			</main>

			<!-- Footer -->
			<%- include('../partials/footer') %>

				<script src="/js/users/login.js"></script>
	</body>

</html>