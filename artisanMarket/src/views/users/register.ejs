<!DOCTYPE html>
<html lang="es">

<!-- Head -->

<head>
	<link rel="stylesheet" href="/css/register.css">
</head>
<%- include ('../partials/head') %>

	<body>
		<!-- Header -->
		<%- include ('../partials/header') %>

			<main class="formulario">
				<div class="errores">
					<ul>
						
					</ul>
				</div>
				<div class="form">
					<form class="form-register" action="/users/registerUser" method="POST" enctype="multipart/form-data">
						<div>
							<label for="name">Nombres</label><br><br>
							<input type="text" id="name" name="name" placeholder="Ej: Juan Pablo" required>
						</div><br>
						<div>
							<label for="lastname">Apellidos</label><br><br>
							<input type="text" id="lastname" name="lastname" placeholder="Ej: Lopez Correa" required>
						</div><br>
						<div>
							<label for="email">Correo electrónico</label><br><br>
							<input type="email" id="email" name="email" placeholder="Ej: juan@pablo.com" required>
						</div><br>
						<div>
							<label for="password">Contraseña</label><br><br>
							<input type="password" id="password" name="password" required>
						</div><br>
						<div>
							<label for="role">Perfil</label><br><br>
							<select name="role" required="true">
								<option value="" selected disabled>Seleccione un perfil</option>
								<option value="1">Administrador</option>
								<option value="2">Cliente</option>
							</select>
						</div><br>
						<p>
						<h3>Foto de Perfil</h3>
						</p>
						<p>
							<input type="file" id="image" name="image" accept=".jpg,.jpeg,.png" required>
						</p>
						<p class="btn-login">
							<button type="submit">Registrarse</button>
						</p>
						<a href="/users/login"><strong>¿Ya tienes cuenta?</strong></a><br><br>
					</form>
				</div>
			</main>

			<!-- Footer -->
			<%- include('../partials/footer') %>

				<!-- <script src="/js/users/register.js"> </script> -->
	</body>

</html>